


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum UserRole {
  USER
  ADMIN
  SERVICE_PROVIDER
}

model Role {
  id          String   @id @default(cuid())
  displayName String // Human-readable name (e.g., "Store Manager")
  roleName    String   @unique // System name (e.g., "store_manager")
  description String?
  permissions String[] // Array of permission strings
  users       User[]   @relation("UserRoles")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([roleName])
}

model User {
  id            String    @id @default(cuid())
  name          String
  firstName     String
  lastName      String
  phone         String    @unique
  email         String    @unique
  emailVerified DateTime?
  image         String?
  jobTitle      String?
  bio           String?
  roles         Role[]    @relation("UserRoles") // Updated to support multiple roles
  // role          UserRole  @default(USER)
  password      String?
  status        Boolean   @default(true)
  accounts      Account[]
  sessions      Session[]
  isVerfied     Boolean   @default(false)
  token         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  roleId        String?
}


model Member {
  id            String       @id @default(cuid())
  name          String
  position      String
  photo         String  
  description   String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  events     Event[]
  campaigns  Campaign[]
  stories    Story[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum EventStatus {
  UPCOMING
  ONGOING
  COMPLETED
  CANCELLED
}

model Event {
  id              String       @id @default(cuid())
  title           String
  date            String       // e.g. "March 15, 2025"
  time            String       // e.g. "10:00 AM - 4:00 PM"
  location        String       // venue name
  address         String
  attendees       Int          @default(0)
  categoryId        String
  category        Category     @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  image           String
  description     String
  longDescription String       @db.Text
  highlights      String[]     // requires PostgreSQL
  registrations   EventRegistration[] // <-- ADD THIS LINE
  schedule        Json         // array of { time: string; activity: string }
  status          EventStatus  @default(UPCOMING)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([status])
}

  
// schema.prisma

enum CampaignStatus {
  ACTIVE
  COMPLETED
  CANCELLED
  PAUSED
}

model Campaign {
  id              String          @id @default(cuid())
  title           String
  categoryId      String?
  category        Category?       @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  image           String
  description     String
  longDescription String    
  goal            Int
  raised          Int             @default(0)
  supporters      Int             @default(0)
  daysLeft        Int             @default(0)
  startDate       String
  endDate         String
  impact          String[]        // Postgres text[]
  updates         Json            // [{ date, title, content }]
  status          CampaignStatus  @default(ACTIVE)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  @@index([status])
  @@index([categoryId])
}

model Story {
  id           String    @id @default(cuid())
  title        String
  slug         String    @unique
  categoryId   String
  category     Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  authorName   String
  authorImage  String
  authorBio    String
  date         String      // e.g. "March 5, 2025"
  readTime     String      // e.g. "5 min read"
  image        String
  content      String    @db.Text
  likes        Int       @default(0)
  comments     Int       @default(0)
  tags         String[]  // Postgres array

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([categoryId])
  @@index([slug])
}

model Volunteer {
  id           String    @id @default(cuid())
  fullName     String
  email        String
  phone        String
  location     String
  skills       String    @db.Text
  availability String    @db.Text
  interests    String[]  // Postgres array
  status       String    @default("pending") // pending, approved, rejected, contacted
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([email])
  @@index([status])
  @@index([createdAt])
}

model Partnership {
  id                String    @id @default(cuid())
  organizationName  String
  contactName       String
  email             String
  phone             String
  partnershipType   String    // corporate, foundation, community, educational, other
  message           String    @db.Text
  status            String    @default("pending") // pending, approved, rejected, contacted
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([email])
  @@index([status])
  @@index([createdAt])
}

// prisma/schema.prisma

enum SponsorshipStatus {
  ACTIVE
  PAUSED
  ENDED
}

model Sponsor {
  id            String         @id @default(cuid())
  fullName      String
  email         String         @unique
  phone         String?
  address       String?

  sponsorships  Sponsorship[]

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Child {
  id            String         @id @default(cuid())
  /// Optional: keep your numeric sample ids for easy mapping from mock data
  extId         Int?           @unique
  name          String
  age           Int
  location      String
  imageUrl      String?
  background    String?
  isFeatured    Boolean        @default(false)

  sponsorships  Sponsorship[]

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}
model Banner {
  id            String         @id @default(cuid())
  title          String
  imageUrl      String?
  subtitle      String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Sponsorship {
  id            String             @id @default(cuid())
  sponsorId     String
  childId       String
  monthlyAmount Float              @default(50)
  status        SponsorshipStatus  @default(ACTIVE)
  startDate     DateTime           @default(now())
  endDate       DateTime?
  agreeToTerms  Boolean            @default(true)

  /// simple “only one active sponsorship per child” guard
  active        Boolean            @default(true)

  sponsor       Sponsor            @relation(fields: [sponsorId], references: [id], onDelete: Cascade)
  child         Child              @relation(fields: [childId], references: [id], onDelete: Cascade)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@unique([childId, active]) // at most one active sponsorship per child
}


enum RegistrationStatus {
  PENDING
  CONFIRMED
  CANCELLED
  ATTENDED
}

model EventRegistration {
  id                  String             @id @default(cuid())
  eventId             String
  event               Event              @relation(fields: [eventId], references: [id], onDelete: Cascade)
  fullName            String
  email               String
  phone               String
  numberOfGuests      Int                @default(1)
  specialRequirements String?            @db.Text
  status              RegistrationStatus @default(PENDING)
  registeredAt        DateTime           @default(now())
  confirmedAt         DateTime?
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt

  @@index([eventId])
  @@index([email])
  @@index([status])
  @@index([createdAt])
}